<div class="passwords-edit-contents">
  <h2 class="title">パスワード変更</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %><br />
      <% if @minimum_password_length %>
        <small class="small">(最低<%= @minimum_password_length %>文字以上)</small><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワード(再入力)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "変更",class: "button is-success" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
